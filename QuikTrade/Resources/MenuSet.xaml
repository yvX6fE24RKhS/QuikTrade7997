<!-- <version>1.0..* : 1.0.7871.*</version> -->
<ResourceDictionary  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:local="clr-namespace:QuikTrade"
                     xmlns:commands="clr-namespace:QuikTrade.Commands;assembly=QuikTrade"
                     >
   
   <Set x:Key="MainMenuSet" x:Shared="True">
      <MenuItem x:Name="MainItemFile" Header="Файл">
         <Separator/>
         <MenuItem x:Name="MainItemClose" Header="Выход" Command="Close" InputGestureText="Alt+F4"/>
      </MenuItem>
      <MenuItem x:Name="MainItemTest" Header="_Test">
         <MenuItem x:Name="Test" Header="Run Test" Command="{x:Static commands:ViewModelCommands.TestCommand}"/>
         <MenuItem x:Name="MainItemCreateTabSample" Header="CreateTab" Command="{x:Static commands:ViewModelCommands.CreateTabSampleCommand }"/>
      </MenuItem>
      <MenuItem x:Name="MainItemView" Header="Вид">
         <MenuItem x:Name="Log" Header="Журнал" Command="{x:Static commands:ViewModelCommands.LogShowCommand}"/>
      </MenuItem>
      <MenuItem x:Name="MainItemWindow" Header="Окно">
         <MenuItem x:Name="MainItemCloseAllTabs" Header="Закрыть все вкладки" Command="{x:Static commands:ViewModelCommands.CloseAllTabsCommand}"/>
      </MenuItem>
   </Set>
</ResourceDictionary>